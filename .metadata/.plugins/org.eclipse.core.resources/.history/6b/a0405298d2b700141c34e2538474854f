package mckn3023Project2;

import java.util.ArrayList;

/**
 *Holds a bunch of State objects
 */
public class Country {

	//Instance variables
	/**
	 * The States contained by this Country
	 */
	ArrayList<State> states;
	
	//Instance methods	
	/**
	 * Constructs a Country with an empty <code>ArrayList{@literal <}State{@literal >}</code> of States
	 */
	public Country() {
		this.states=new ArrayList<State>();
	}

	/**
	 * Constructs a Country with an <code>ArrayList{@literal <}State{@literal >}</code> of States that is a copy of states
	 * @param states The States you want this country to hold
	 */
	public Country(ArrayList<State> states) {
		this.states = states;
	}
	

	//Search method
	/**
	 * Finds and returns a state matching the name string
	 * @param name The name of the state to be found
	 * @return The state that was found
	 */
	public State findState(String name)
	{
		//TODO
		return null;
	}
	
	//Adder method
	/**
	 * Adds a state to the ArrayList {@literal <}State{@literal >} states
	 * @param state the state to be added to the ArrayList{@literal <}State{@literal >} states
	 */
	public void addState(State state)
	{
		states.add(state);
	}
	
}