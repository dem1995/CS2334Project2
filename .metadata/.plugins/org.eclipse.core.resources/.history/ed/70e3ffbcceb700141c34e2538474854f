package mckn3023Project2;

import java.util.ArrayList;

/**
 * Holds an ArrayList<City> of City objects and provides methods for searching that list
 */
public class State {
	
	//Instance variables~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	/**
	 * An ArrayList<City> of City objects in this State object
	 */
	private ArrayList<City> cities;
	
	/**
	 * True if the cities in this state have been sorted, false otherwise
	 */
	private boolean isSorted;
	
	//Instance methods~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~	
	/**
	 * Creates a State object with an empty ArrayList<City> cities
	 */
	public State()
	{
		this.cities=new ArrayList<City>();
	}
	/**
	 * Creates a State object that contains a copy of the ArrayList<City> cities
	 * @param cities The Cities for this State to hold
	 */
	public State(ArrayList<City> cities)
	{
		this.cities=cities;
	}
	
	//Search method
	
	/**
	 * Searches for and returns a city with a name that exactly matches the search parameter.
	 * @param cityName The exact name of the city to be found
	 * @return A City with a name that exactly matches the search parameter if one is found, otherwise returns null.
	 */
	public City searchFor(String cityName)
	{
		//TODO
		return null;
	}
	
	//Adder methods
	
	/** 
	 * Adds a City object to this State's ArrayList<City> of Cities
	 * @param city The City to be added
	 */
	public void addCity(City city)
	{
		this.cities.add(city);
	}
	
	
	
}
